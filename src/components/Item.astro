---
interface Props {
  name: string;
  bg?:boolean;
}

const { name, bg } = Astro.props;
---

<script>
  import("@shoelace-style/shoelace/dist/components/range/range.js");
  import("@shoelace-style/shoelace/dist/components/button/button.js");
  import("@shoelace-style/shoelace/dist/components/radio/radio.js");
  import("@shoelace-style/shoelace/dist/components/radio-group/radio-group.js");
</script>

<div>
  <div>
    <span class="full-width item-name">{name}</span>
  </div>
  <div class="flex full-width">
    <span class="value-label">select value</span>
    <sl-radio-group class="group full-width">
      <sl-radio value="0"></sl-radio>
      <sl-radio value="1"></sl-radio>
      <sl-radio value="2"></sl-radio>
      <sl-radio value="3"></sl-radio>
      <sl-radio value="4"></sl-radio>
    </sl-radio-group>
  </div>
</div>

<style>
  sl-radio::part(label) {
    display: none;
  }

  /* sl-radio::part(base) {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width:100%;
    height:40px;
  } */

  .flex {
    display: flex;
    flex-direction: row;
    gap: 8px;
  }

  sl-radio::part(control) {
    border-color: var(--sl-color-neutral-600);
  }

  .group {
  }

  .group::part(form-control) {
    width: 100%;
  }

  .group::part(form-control-input) {
    flex-direction: row;
    display: flex;
    gap: 4px;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }

  .full-width {
    width: 100%;
  }
  .centered {
    display: flex;
    justify-content: center;
  }
  .value-label {
    font-size: 16px;
    width: 100px;
    flex-shrink: 0;
    margin-right:24px;
    color: var(--sl-color-gray-600);
  }

  .item-name {
    font-size: 18px;
    font-weight: normal;
  }

  sl-range {
    touch-action: none;
    /* padding-right:80px; */
    --track-color-active: var(--sl-color-gray-300);
    --track-color-inactive: var(--sl-color-gray-100);
  }

  sl-radio {
    display: inline;
  }
</style>
