---
import Layout from "../layouts/Layout.astro";
import Item from "../components/Item.astro";

const items = ["Angry", "Worn Out", "Ashamed", "4", "5", "6", "7", "8"];
---

<Layout title="moodnote">
  <main>
    <section class="landing">
        <span class="logo">ðŸ’™ moodnote.cc</span>
        <h1>Mood tracker, backed by <u>POMS</u> questionnaire</h1>
        <span>Understand your current emotional state and identify patterns over time.</span>
    </section>
    <form>
      <h2>How do you feel <strong>right now?</strong></h2>
      <div class="itemSection">
        <div class="flex-row pageheading">
          <span class="pages">8 of 40</span>
          <span>Not at all</span>
          <div class="line"></div>
          <span> Extreme</span>
        </div>

        {items.map((item, i) => <Item name={item} bg={i % 2 === 0}/>)}
      </div>
      <div class="itemSection">
        <span>8 items of 40</span>
        {items.map((item) => <Item name={item} />)}
      </div><div class="itemSection">
        <span>8 items of 40</span>
        {items.map((item) => <Item name={item} />)}
      </div><div class="itemSection">
        <span>8 items of 40</span>
        {items.map((item) => <Item name={item} />)}
      </div><div class="itemSection">
        <span>8 items of 40</span>
        {items.map((item) => <Item name={item} />)}
      </div>
    </form>
  </main>
</Layout>

<style>

h1 {
    font-family: var(--sl-font-serif);
    padding: 16px 0
}

.landing {
    
    background-color: var(--sl-color-blue-50);
    border-radius:24px;
    margin: 20px;
    padding: 20px 20px 40px 20px
}
strong {
    font-weight: 900;
}

h3 {
    font-weight: 200;
}

.logo {
    font-family: var(--sl-font-mono);
}

  .flex-row {
    display: flex;
    flex-direction: row;
    gap: 8px;
    align-items: center;
    color: var(--sl-color-gray-600);
  }

  form {
    background-color: var(--sl-color-neutral-0);
    padding: 20px;
  }

  body {
    /* background-color: var(--sl-color-blue-50); */
    margin: auto;
  }
  .line {
    flex-grow:1;
    height:2px;
    background-color: var(--sl-color-gray-300);

  }

  .space-between {
    justify-content: space-between;
  }

  .pages {
    margin-right:24px;
    width: 100px;
    flex-shrink: 0;
  }

  .full-width {
    width: 100%;
  }

  main {
    max-width: 430px;
    margin: auto;
    /* padding: 1rem; */
    /* width: 800px; */
    /* max-width: calc(100% - 2rem); */
    color: white;
    font-size: 16px;
    line-height: 1.6;
  }

  .itemSection {
    margin-top: 24px;
    margin-bottom: 40px;
    display: flex;
    flex-direction: column;
    gap: 20px;
  }
</style>
